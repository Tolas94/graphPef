<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.mendelu.tomas.graphpef.activities.MainActivity"
    android:background="@color/colorPrimary"
    >

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Start App" />

    <ImageView
        android:id="@+id/logoPefWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/logo_pef_biele"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Display3"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/mainScreenDisclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:padding="12dp"
        android:layout_below="@id/mainScreenDisclaimer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/LogoMendeluBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="12dp"
            app:srcCompat="@drawable/logo_mendelu_black_official" />

        <ImageView
            android:id="@+id/LogoPefBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="12dp"
            app:srcCompat="@drawable/logo_pef_black_official" />

    </LinearLayout>

</RelativeLayout>
