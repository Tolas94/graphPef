<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/info_item_title_name"
                    android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
                    android:text="text3"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/info_item_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/info_item_title_name"
                    android:layout_marginLeft="5dp"
                    android:text="text2"
                    android:textStyle="italic"
                    android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"/>
                <TextView
                    android:id="@+id/info_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text1"
                    android:layout_below="@id/info_item_title_name"
                    android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>